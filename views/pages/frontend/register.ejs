<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
      <h2 align="center">ลงทะเบียนพนักงาน</h2>
      <% if(locals.errors){ %>
      <ul class="alert alert-danger">
        <% Object.values(errors).forEach(function(error){%>
        <li><%= error.msg %></li>
        <%})%>
      </ul>
      <%}%>
      <form class="form-group" action="/users/register" method="post">
        <div class="form-group">
          <label for="">EMPID:</label>
          <input type="text" name="empid" value="" class="form-control" />
        </div>
        <div class="form-group">
          <label for="">PASSWORD:</label>
          <input
            type="password"
            name="password"
            value=""
            class="form-control"
          />
        </div>
        <div class="form-group">
          <label for="">REPASSWORD:</label>
          <input
            type="password"
            name="repassword"
            value=""
            class="form-control"
          />
        </div>
        <input type="submit" name="" value="Register" class="btn btn-primary" />
      </form>
    </div>
  </body>
</html>
